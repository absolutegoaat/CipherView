<mah:MetroWindow x:Class="CipherView.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CipherView"
        mc:Ignorable="d"
        Title="CipherView - Dashboard" Height="451" Width="913" 
        WindowStartupLocation="CenterScreen" 
        WindowState="Maximized">

    <mah:MetroWindow.LeftWindowCommands>
        <mah:WindowCommands>
            <Button Click="Button_About" ToolTip="CipherView">
                <iconPacks:PackIconModern Width="22"
                                  Height="22"
                                  Kind="WeatherRain" />
            </Button>
        </mah:WindowCommands>
    </mah:MetroWindow.LeftWindowCommands>
    
    <mah:MetroWindow.RightWindowCommands>
        <mah:WindowCommands>
            <Button Content="Settings" Click="Button_Settings"/>
            <Button Content="Log Out" Click="Button_SignOut"/>
        </mah:WindowCommands>
    </mah:MetroWindow.RightWindowCommands>

    <Grid>
        <mah:MetroAnimatedSingleRowTabControl>
            <TabItem Header="Dashboard">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <mah:MetroHeader FontSize="38px" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0">Welcome to CipherView</mah:MetroHeader>

                    <Button Content="Add New Entry" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,68,0,0" Width="120"/>
                </Grid>
            </TabItem>
            <TabItem Header="Database">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <DataGrid Margin="10" 
                              x:Name="PeopleGrid" 
                              ItemsSource="{Binding PeopleDataGridbase}" 
                              IsReadOnly="True" 
                              AutoGenerateColumns="False"
                              SelectionMode="Single" 
                              MouseDoubleClick="PeopleGrid_MouseDoubleClick">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding name}" Width="*"/>
                            <DataGridTextColumn Header="Email" Binding="{Binding email}" Width="*"/>
                            <DataGridTextColumn Header="Address" Binding="{Binding address}" Width="*"/>
                            <DataGridTextColumn Header="Phone" Binding="{Binding phone}" Width="*"/>
                            <DataGridTextColumn Header="IP Address" Binding="{Binding ipaddress}" Width="2*"/>
                            <DataGridTextColumn Header="Convicted" Binding="{Binding ConvictedDisplay}" Width="3*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </mah:MetroAnimatedSingleRowTabControl>

        <StatusBar VerticalAlignment="Bottom" Background="{Binding ColorBar}" Foreground="White">
            <StatusBarItem>Host:</StatusBarItem>
            <StatusBarItem Content="{Binding ConnectedIpAddress}"/>
            <Separator Style="{StaticResource MahApps.Styles.Separator.StatusBar}" />
            <StatusBarItem>Port: 3306</StatusBarItem>
            <!--ill add an option to connect to any port-->
            <Separator Style="{StaticResource MahApps.Styles.Separator.StatusBar}" />
            <StatusBarItem>Status -</StatusBarItem>
            <StatusBarItem Content="{Binding WindowStatus}"/>
            <mah:MetroProgressBar IsEnabled="{Binding ProgressBarOn}"/>
        </StatusBar>
    </Grid>
</mah:MetroWindow>
