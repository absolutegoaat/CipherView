<mah:MetroWindow x:Class="CipherView.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CipherView"
        mc:Ignorable="d"
        Title="CipherView - Dashboard"
        Height="451"
        Width="913"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        GlowBrush="#0078D7"
        BorderBrush="#AAFFFFFF"
        BorderThickness="1"
        Background="{DynamicResource MahApps.Brushes.ThemeBackground}">

    <!-- LEFT WINDOW COMMANDS -->
    <mah:MetroWindow.LeftWindowCommands>
        <mah:WindowCommands>
            <Button Click="Button_About" ToolTip="CipherView">
                <iconPacks:PackIconModern Width="22"
                                          Height="22"
                                          Kind="Eye"
                                          Foreground="#0078D7"/>
            </Button>
        </mah:WindowCommands>
    </mah:MetroWindow.LeftWindowCommands>

    <!-- RIGHT WINDOW COMMANDS -->
    <mah:MetroWindow.RightWindowCommands>
        <mah:WindowCommands>
            <Button Content="Settings"
                    Click="Button_Settings"
                    Style="{DynamicResource MahApps.Styles.Button.Flat}"
                    Padding="8,2"/>
            <Button Content="Log Out"
                    Click="Button_SignOut"
                    Style="{DynamicResource MahApps.Styles.Button.FlatAccent}"
                    Padding="8,2"/>
        </mah:WindowCommands>
    </mah:MetroWindow.RightWindowCommands>

    <Grid>
        <Border Margin="20"
                CornerRadius="10"
                BorderBrush="#88FFFFFF"
                BorderThickness="1"
                Background="#AAFFFFFF">

            <mah:MetroAnimatedSingleRowTabControl>
                <TabItem Header="Dashboard">
                    <Grid Margin="15">
                        <TextBlock Text="Welcome to CipherView"
                                   FontSize="36"
                                   FontWeight="Bold"
                                   Foreground="#1A1A1A"
                                   Margin="5,10,0,20"/>
                        <Button Content="Add New Entry"
                                Width="160"
                                Height="40"
                                Style="{DynamicResource MahApps.Styles.Button.FlatAccent}"/>
                    </Grid>
                </TabItem>

                <TabItem Header="Database">
                    <Grid Margin="10">
                        <DataGrid x:Name="PeopleGrid"
                                  ItemsSource="{Binding PeopleDataGridbase}"
                                  IsReadOnly="True"
                                  AutoGenerateColumns="False"
                                  SelectionMode="Single"
                                  MouseDoubleClick="PeopleGrid_MouseDoubleClick"
                                  Background="#FDFDFD"
                                  AlternatingRowBackground="#F5F8FA">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
                                <DataGridTextColumn Header="Name" Binding="{Binding name}" Width="*"/>
                                <DataGridTextColumn Header="Email" Binding="{Binding email}" Width="*"/>
                                <DataGridTextColumn Header="Phone" Binding="{Binding phone}" Width="*"/>
                                <DataGridTextColumn Header="Convicted" Binding="{Binding ConvictedDisplay}" Width="3*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </TabItem>
            </mah:MetroAnimatedSingleRowTabControl>
        </Border>

        <StatusBar VerticalAlignment="Bottom"
                   Background="#0078D7"
                   Foreground="White"
                   FontWeight="SemiBold"
                   Padding="5,2">
            <StatusBarItem Content="Host:"/>
            <StatusBarItem Content="{Binding ConnectedIpAddress}"/>
            <Separator Style="{StaticResource MahApps.Styles.Separator.StatusBar}" />
            <StatusBarItem Content="Port: 3306"/>
            <Separator Style="{StaticResource MahApps.Styles.Separator.StatusBar}" />
            <StatusBarItem Content="Status -"/>
            <StatusBarItem Content="{Binding WindowStatus}"/>
        </StatusBar>
    </Grid>
</mah:MetroWindow>
