<mah:MetroWindow x:Class="CipherView.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CipherView"
        mc:Ignorable="d"
        Title="CipherView - Dashboard"
        Height="522"
        Width="967"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        GlowBrush="{DynamicResource MahApps.Brushes.Accent}"
        BorderBrush="{DynamicResource MahApps.Brushes.ThemeForeground}"
        BorderThickness="1"
        Background="{DynamicResource MahApps.Brushes.ThemeBackground}">

    <mah:MetroWindow.LeftWindowCommands>
        <mah:WindowCommands>
            <Button Click="Button_About" ToolTip="CipherView">
                <iconPacks:PackIconModern Width="22"
                                          Height="22"
                                          Kind="Eye"/>
            </Button>
        </mah:WindowCommands>
    </mah:MetroWindow.LeftWindowCommands>

    <mah:MetroWindow.RightWindowCommands>
        <mah:WindowCommands>
            <Button Content="Settings"
                    Click="Button_Settings"/>
            <Button Content="About"
                    Click="Button_About2"/>
            <Button Content="Log Out"
                    Click="Button_SignOut"/>
        </mah:WindowCommands>
    </mah:MetroWindow.RightWindowCommands>

    <Grid>
        <mah:MetroAnimatedSingleRowTabControl Margin="15">
            <TabItem Header="Dashboard">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0"
                                Orientation="Vertical">
                        <TextBlock Text="{Binding LoggedInUser}"
                                   FontSize="36"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}"
                                   Margin="5"/>
                        <TextBlock Text="Welcome to Cipherview"
                                   FontSize="22"
                                   FontWeight="Light"
                                   Margin="5"
                                   Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}"/>

                        <TextBlock Text="Here is a quick view of your data."
                                   FontSize="16"
                                   FontWeight="Normal"
                                   Margin="5,15,0,10"
                                   Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}"/>

                        <DataGrid x:Name="PeopleGrid2"
                                  ItemsSource="{Binding PeopleDataGridbase}"
                                  IsReadOnly="True"
                                  AutoGenerateColumns="False"
                                  SelectionMode="Single"
                                  MouseDoubleClick="PeopleGrid2_MouseDoubleClick"
                                  Background="{DynamicResource MahApps.Brushes.Control.Background}"
                                  Foreground="{DynamicResource MahApps.Brushes.Text}"
                                  AlternatingRowBackground="{DynamicResource MahApps.Brushes.Control.Alternate}"
                                  GridLinesVisibility="Horizontal">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Name" Binding="{Binding name}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem Header="Database">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="440"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <DataGrid x:Name="PeopleGrid"
                                  ItemsSource="{Binding PeopleDataGridbase}"
                                  IsReadOnly="True"
                                  AutoGenerateColumns="False"
                                  SelectionMode="Single"
                                  MouseDoubleClick="PeopleGrid_MouseDoubleClick"
                                  Background="{DynamicResource MahApps.Brushes.Control.Background}"
                                  Foreground="{DynamicResource MahApps.Brushes.Text}"
                                  AlternatingRowBackground="{DynamicResource MahApps.Brushes.Control.Alternate}"
                                  GridLinesVisibility="Horizontal">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
                                <DataGridTextColumn Header="Name" Binding="{Binding name}" Width="*"/>
                                <DataGridTextColumn Header="Label(s)" Binding="{Binding labels}" Width="2*"/>
                                <DataGridTextColumn Header="Convicted" Binding="{Binding ConvictedDisplay}" Width="3*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>

                    <StackPanel Grid.Column="3">
                        <TextBlock Text="Quick Actions"
                                   HorizontalAlignment="Center"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Margin="5"
                                   Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}"/>

                        <Button Content="Add New Entry"
                                Margin="5"
                                Width="400"
                                Style="{DynamicResource MahApps.Styles.Button.Dialogs}"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </mah:MetroAnimatedSingleRowTabControl>

        <StatusBar VerticalAlignment="Bottom"
                   Background="{DynamicResource MahApps.Brushes.Accent}"
                   FontWeight="SemiBold"
                   Padding="5,2">
            <StatusBarItem Content="Host:"/>
            <StatusBarItem Content="{Binding ConnectedIpAddress}"/>
            <Separator Style="{StaticResource MahApps.Styles.Separator.StatusBar}" />
            <StatusBarItem Content="Port: 3306"/>
            <Separator Style="{StaticResource MahApps.Styles.Separator.StatusBar}" />
            <StatusBarItem Content="Status -"/>
            <StatusBarItem Content="{Binding WindowStatus}"/>
        </StatusBar>
    </Grid>
</mah:MetroWindow>