<mah:MetroWindow x:Class="CipherView.People.AddPerson"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CipherView"
        mc:Ignorable="d"
        TitleAlignment="Center"
        Title="CipherView - Add Person" Height="655" Width="1073">
    <Grid>
        <mah:MetroAnimatedSingleRowTabControl Margin="15">
            <TabItem Header="Add Person">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="500"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" 
                                    Orientation="Vertical" 
                                    Margin="0,0,20,0">

                        <Label Content="Name:" 
                               FontWeight="Bold" 
                               FontSize="14"/>
                        <TextBox x:Name="PersonName" 
                                 FontSize="16"
                                 Padding="6"
                                 Margin="0,0,0,10"/>

                        <Label Content="Email:" FontWeight="Bold" FontSize="14"/>
                        <TextBox x:Name="PersonEmail" FontSize="16" Padding="6" Margin="0,0,0,10"/>

                        <Label Content="Phone:" FontWeight="Bold" FontSize="14"/>
                        <TextBox x:Name="PersonPhone" FontSize="16" Padding="6" Margin="0,0,0,10"/>

                        <Label Content="Address/Location:" FontWeight="Bold" FontSize="14"/>
                        <TextBox x:Name="PersonAddress" FontSize="16" Padding="6" Margin="0,0,0,10"/>

                        <Label Content="IP Address:" FontWeight="Bold" FontSize="14"/>
                        <TextBox x:Name="PersonIPAddress" FontSize="16" Padding="6" Margin="0,0,0,10"/>

                        <Label Content="Label(s):" FontWeight="Bold" FontSize="14"/>
                        <TextBox x:Name="PersonLabels" FontSize="16" Padding="6" Margin="0,0,0,10"/>
                        
                        <StatusBar Background="Gray" 
                                       FontWeight="SemiBold" 
                                       Padding="5"
                                       Height="50"
                                       Margin="0,10,0,0">
                            <Button Content="Save"
                                        Height="30"
                                        HorizontalAlignment="Center"
                                        Padding="5"
                                        Click="Button_Click"
                                        Style="{DynamicResource MahApps.Styles.Button.MetroWindow.Base}"/>
                        </StatusBar>
                    </StackPanel>

                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  Grid.Column="2">
                        <StackPanel Grid.Column="2" Orientation="Vertical">
                            <Label Content="Socials:" FontWeight="Bold" FontSize="14"/>
                            <TextBox x:Name="PersonSocials"
                                 FontSize="15" 
                                 Padding="6" 
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 Margin="0,0,0,10"/>

                            <Label Content="Description:" FontWeight="Bold" FontSize="14"/>
                            <TextBox x:Name="PersonDesc"
                                 FontSize="15"
                                 AcceptsReturn="True"
                                 Padding="6"
                                 TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto"/>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>
        </mah:MetroAnimatedSingleRowTabControl>
    </Grid>
</mah:MetroWindow>
